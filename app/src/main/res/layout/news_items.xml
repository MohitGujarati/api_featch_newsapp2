<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_3dp"
    app:cardElevation="@dimen/dimen_8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2dp">


        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/dimen_250dp"
            android:maxHeight="@dimen/dimen_250dp"
            android:layout_margin="3dp" />


        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newsImage"
            android:layout_marginBottom="@dimen/dimen_3dp"
            android:padding="@dimen/dimen_3dp"
            android:textAlignment="textStart"
            android:fontFamily="sans-serif-black"
            android:hint="@string/Headline"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_des"
            android:textSize="@dimen/dimen_14sp"
            android:hint="@string/Description"
            android:textAlignment="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:padding="3dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_4dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnurl"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:text="@string/Read_more"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12sp"
                app:icon="@drawable/ic_chat"
                app:iconTint="@color/black"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnshare"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:text="@string/Share"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_12sp"
                app:icon="@drawable/ic_share"
                app:iconTint="@color/black" />



            <TextView
                android:id="@+id/tv_publish"
                android:textColor="@color/black"
                android:padding="@dimen/dimen_4dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Source_Name"/>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>